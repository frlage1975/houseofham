<h1 class="text-3xl font-bold mb-6 text-center">Log In</h1>

<%= form_with(url: session_path, local: true, class: "max-w-lg mx-auto", data: { turbo: false }) do |form| %>
  <div class="mb-4">
    <%= form.label :email, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.email_field :email, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autocomplete: "email" %>
  </div>
  <div class="mb-4">
    <%= form.label :password, class: "block text-gray-700 text-sm font-bold mb-2" %>
    <%= form.password_field :password, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", autocomplete: "current-password" %>
  </div>
  <div class="text-center">
    <%= form.submit "Log In", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
<% end %>


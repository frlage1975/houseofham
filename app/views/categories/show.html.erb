<h1 class="text-3xl font-bold mb-6 text-center"><%= @category.name %></h1>
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
  <% @products.each do |product| %>
    <div class="border rounded p-4">
      <div class="mb-4">
        <%= image_tag product.image.variant(resize: "300x300") if product.image.attached? %>
      </div>
      <h2 class="text-xl font-semibold mb-2"><%= product.name %></h2>
      <p class="mb-2"><%= product.description %></p>
      <p class="text-gray-700 mb-2">Price: <%= number_to_currency(product.base_price) %></p>
      <div class="flex text-center mt-4">
        <%= link_to 'View Details', product_path(product), class: 'bg-blue-500 text-white py-2 px-4 rounded text-center mr-2' %>
        <%= button_to 'Add to Cart', add_to_cart_path(product_id: product.id), method: :post, class: 'bg-green-500 text-white py-2 px-4 rounded text-center' %>
      </div>
    </div>
  <% end %>
</div>
